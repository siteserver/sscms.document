@page
@{ Layout = "_Layout"; }

<el-menu 
  :default-active="path" 
  mode="horizontal"
  background-color="#545c64"
  text-color="#fff"
  active-text-color="#ffd04b"
  v-on:select="handleSelect">
  <el-menu-item v-for="locale in locales" :key="locale.path" :index="locale.path">
      <el-link :underline="false">
        {{ locale.title }}
      </el-link>
  </el-menu-item>
</el-menu>

<el-form ref="template" :model="template" :inline="true" label-position="top" size="small">
        
  <el-row>
    <el-col :span="24">
      <el-button type="text" icon="el-icon-files" v-on:click="btnRestoreClick">还原历史版本</el-button>
      <el-button type="text" icon="el-icon-brush" v-on:click="btnFormatClick">格式化代码</el-button>
    </el-col>
  </el-row>

  <div id="templateContent" style="width:99%; height: 450px; border: 1px solid #d7dae2;"></div>

  <div style="margin-top: 15px; text-align: center">
    <el-button type="primary" size="small" v-on:click="btnSubmitClick(false)">保 存</el-button>
  </div>
  
</el-form>

@section Scripts{
  <script src="/sitefiles/assets/lib/monaco-editor/min/vs/loader.js"></script>
  <script src="../sidebar.js" type="text/javascript"></script>
}
